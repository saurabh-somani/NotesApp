<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/notesFragment">

    <fragment
        android:id="@+id/notesFragment"
        android:name="com.example.notesapp.ui.NotesFragment"
        android:label="NotesFragment"
        tools:layout="@layout/notes_fragment">
        <action
            android:id="@+id/action_notesFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.example.notesapp.ui.NoteDetailFragment"
        android:label="NoteDetailFragment"
        tools:layout="@layout/note_detail_fragment">
        <argument
            android:name="noteId"
            app:argType="integer" />
    </fragment>
</navigation>